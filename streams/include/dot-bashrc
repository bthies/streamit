# make sure STREAMIT_HOME is exported
export STREAMIT_HOME

# take care of classpath
if [ -z "$CLASSPATH" ]
then
 export CLASSPATH=.
fi

# java classes
CLASSPATH=${CLASSPATH}:/usr/uns/jdk1.3.1_01/jre/lib/rt.jar
## antlr classes
CLASSPATH=${CLASSPATH}:/usr/uns/java/antlr.jar
# streamit classes
CLASSPATH=${CLASSPATH}:${STREAMIT_HOME}/compiler
CLASSPATH=${CLASSPATH}:${STREAMIT_HOME}/compiler/3rdparty
CLASSPATH=${CLASSPATH}:${STREAMIT_HOME}/compiler/3rdparty/cplex/cplex.jar
CLASSPATH=${CLASSPATH}:${STREAMIT_HOME}/library/java

# the current version of starsearch we're using
export STARSEARCH_HOME=/home/bits7/NO_BACKUP/streamit/starsearch/
export TOPDIR=${STARSEARCH_HOME}

# the path to ATLAS
export ATLAS_HOME=/home/bits7/NO_BACKUP/streamit/ATLAS

# for running dotty
export LEFTYPATH=/home/bits7/NO_BACKUP/streamit/dotty

# add STREAMIT_HOME to the path in order to find "knit"
if [ -z "$PATH" ]
then
  export PATH=${STREAMIT_HOME}
else
  PATH=${PATH}:${STREAMIT_HOME}
fi

# include extra LaTeX packages
# (Note that this *always* DTRT: the TeX path-searching stuff interprets
# a blank entry as "the default path".)
TEXINPUTS=${STREAMIT_HOME}/include/tex:${TEXINPUTS}

#include for Eclipse plugins
CLASSPATH=${CLASSPATH}:${STREAMIT_HOME}/eclipse
